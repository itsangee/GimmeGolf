<div class="container">
  <div class="row">
    <div class="col-xs-4">

      <%= simple_form_for [@course, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :ratings, collection: (1..5).to_a, label: "Rate your experience" %>
        <%= f.submit "Send your review", class: "button-show"%>


      <% end %>
    </div>
  </div>
</div>
