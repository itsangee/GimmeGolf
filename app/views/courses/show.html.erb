  <div class="container-show-page">
    <div class="show-card">


    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
          <% @course.photos.each_with_index do |photo,index| %>
            <div class="carousel-item <%="active" if index.zero? %>">
              <img class="d-block" src="<%= cl_image_path photo.key, height: 400, width: 400, crop: :fit %>" alt="<%=@course.name%>">
            </div>
          <% end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>



      <div class="show-card-info">
        <h2><%= @course.name %> <% if params[:selected_date] && params[:selected_date] != "" %> on <%= params[:selected_date].to_date.strftime("%a, %b %e ") %> <% end %> </h2>
        <p> <small><%= @course.description %></small> </p>
        <div class="">
          <h3>This location has <%= pluralize @course.reviews.size, "" %>
          <% if @course.reviews.size == 1 %>
            review
          <% else %>
            reviews
          <% end %></h3>
          <% if @course.average_rating > 0  %>
            <p>Rating: <%= "⭐️" * @course.average_rating %> </p>
          <% else %>
            <p>✩✩✩✩✩</p>
          <% end %> </p>
          <button type="button", id="slot-button", data-bs-toggle="modal" data-bs-target="#exampleModal">Book now</button>
      </div>


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">BOOK A SLOT!</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= simple_form_for [@course, @booking] do |f| %>
            <%# <%= f.input :game_start, collection: @course.slots_collection, required: true %>
            <%= f.input :slot_id, collection: @course.slots_collection, required: true, label_method: :second, value_method: :first %>
            <%# <%= f.select :slot_id, @slots.map { |slot| ["Start time #{slot.start_time.strftime("at %I:%M %p")}", slot.id]} %>
            <%= f.input :date, as: :date, html5: true, required: true %>
            <%= f.submit "Book now", class: "", id: "slot-button" %>
          <% end %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>


    </div>
  </div>

<div class="show-card-info">
 <div class='show-card-slots' data-controller="button-show-courses">
      <p class="" id="available" data-action="click->button-show-courses#showContent">Available courses:<p>
      <div data-show-slots-target="slots">
        <% @slots.each do |slot| %>
          <p> <%= slot.start_time.strftime("%I:%M %p") %></p>
            <% if slot.todays_bookings_count.zero? %>
              <p>no bookings</p>
            <% else %>
              <% slot.bookings.each do |booking| %>
                <% if booking.date == @today %>
                  <p>User: <%= booking.user.email%> - <%= booking.date %> </p>
                <% end %>
              <% end %>
            <% end %>
        <% end %>
      </div>
    </div>
</div>



  <div class='show-card-slots-reviews'>
    <% if @course.reviews.blank? %>
      <h5>Be the first to leave a review for <%= @course.name %></h5>
      <%= render 'reviews/new' %>
    <% else %>
      <h2>Review the course: <%= render 'reviews/new' %> </h2>
    <% end %>
    <div class="">
      <p>
        <button class="button-show" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          See reviews
        </button>
      </p>
      <div class="collapse" id="collapseExample">
        <div class="card card-review card-body review-show-course">
          <% @course.reviews.each do |review| %>
          <p><%= review.content %></p>
          <%= "⭐️" * review.ratings %>
          <p>Created at:</p> <%= review.created_at.strftime("%d-%m-%Y") %>
          <p>User:</p> <%= review.user.email %>
          <%# display reviewer %>
          <% end %>
        </div>
      </div>
    </div>
  </div>







