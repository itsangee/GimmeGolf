<div class="container-show-page">

  <div class="row show-row mb-5">
    <h2 class= "title-show"><strong><%= @course.name.upcase %></strong></h2>
    <h5 class= "title-show">
      <% if @course.average_rating > 0 %>
      <%= "⭐️" * @course.average_rating %> ·
      <% else %>
      ✩✩✩✩✩ ·
      <% end %>
     <%= pluralize @course.reviews.size, "" %>
      <% if @course.reviews.size == 1 %>
      review ·
        <% else %>
          reviews ·
        <% end %>
    <%= @course.location %>
    </h5>
    <div class="">
      <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
        <div class="carousel-indicators">
          <% @course.photos.each_with_index do |photo,index| %>
            <img type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= index %>"  class="<%="active" if index.zero? %> image-button" aria-current="true" aria-label="Slide 1" src="<%= cl_image_path photo.key, crop: :fill %>" alt="<%=@course.name%>">
          <% end %>
        </div>
        <div class="carousel-inner">
          <% @course.photos.each_with_index do |photo,index| %>
          <div class="carousel-item <%="active" if index.zero? %>">
            <img  class="d-block w-100 image-carousel" src="<%= cl_image_path photo.key, crop: :fill %>" alt="<%=@course.name%>">
            <div class="carousel-caption d-none d-md-block">

            </div>
          </div>
          <% end %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </div>

  <div class="description-show">
    <h5 class="description-div"> <%= @course.description %> </h5>
    <div class="modal-body body-show">
        <h5><strong>£104</strong><small> per hour</small></h5>
        <p><% if @course.average_rating > 0 %>
      ⭐️ <%= @course.average_rating %> · <%=  pluralize @course.reviews.size %>
      <% else %>
      ⭐️ <strong>0.0</strong>
      <% end %></p>
          <%= simple_form_for [@course, @booking] do |f| %>
          <%# <%= f.input :game_start, collection: @course.slots_collection, required: true %>
          <%# <%= f.label %>
          <%= f.input :slot_id, collection: @course.slots_collection, required: true, label_method: :second, value_method: :first %>
          <%# <%= f.select :slot_id, @slots.map { |slot| ["Start time #{slot.start_time.strftime("at %I:%M %p")}", slot.id]} %>
          <%= f.input :date, as: :date, html5: true, required: true %>
          <%= f.submit "Book now", class: "", id: "slot-button" %>
        <% end %>
    </div>
  </div>






  <div class='show-card-slots' data-controller="button-show-courses">
    <p class="" id="available" data-action="click->button-show-courses#showContent">Available courses:</p>
    <div data-show-slots-target="slots">
      <% @slots.each do |slot| %>
        <p> <%= slot.start_time.strftime("%I:%M %p") %></p>
          <% if slot.todays_bookings_count.zero? %>
            <p>no bookings</p>
          <% else %>
            <% slot.bookings.each do |booking| %>
              <% if booking.date == @today %>
                <p>User: <%= booking.user.email%> - <%= booking.date %> </p>
              <% end %>
            <% end %>
          <% end %>
      <% end %>
    </div>
  </div>


  <div class='show-card-slots-reviews'>
    <% if @course.reviews.blank? %>
      <h5>Be the first to leave a review for <%= @course.name %></h5>
      <%= render 'reviews/new' %>
    <% else %>
      <h2>Review the course: <%= render 'reviews/new' %> </h2>
    <% end %>
    <div>
      <p>
        <button class="button-show" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          See reviews
        </button>
      </p>
      <div class="collapse" id="collapseExample">
        <div class="card card-review card-body">
          <% @course.reviews.each do |review| %>
          <p><%= review.content %></p>
          <%= "⭐️" * review.ratings %>
          <p>Created at:</p> <%= review.created_at.strftime("%d-%m-%Y") %>
          <p>User:</p> <%= review.user.email %>
          <%# display reviewer %>
          <% end %>
        </div>
      </div>
    </div>
  </div>







