<div class="container">
  <div class="row">
    <div class="cards course-description">
      <% @courses.each do |course| %>
      <div class="course-card" >
        <%= cl_image_tag course.photos[0].key, height: 300,  crop: :fill %>
         <div class="card-course-infos">
              <h4><%= course.name.upcase %></h4>
              <p><%= course.location.upcase %></p>
          </div>
      </div>
       <%# <%= link_to course.name, course_path(course)%>
      <% end %>
              <%# <%= link_to course.name, course_path(course)%>
    </div>
  </div>
</div>
<h1>Hello</h1>

<div class="py-2">
  <form action="/courses" method="get">
    <div class="position-relative">
      <input type="datetime-local" name="search" value="<%=params[:search]%>" placeholder="Search bookings..">

    </div>
    <input type="submit" value="Search" class="btn btn-flat border" id="search-button">
  </form>
</div>

<%= link_to "Display all",  courses_path %>

<% if params[:search].present? %>
  <% @courses.each do |course| %>
    <%= link_to course.name, course_path(course) %>
  <% end %>
<% else %>
  <% @courses.each do |course| %>
    <%= link_to course.name, course_path(course)%>
  <% end %>
<% end %>
